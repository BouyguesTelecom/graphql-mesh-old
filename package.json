{
  "name": "graphql-mesh",
  "workspaces": {
    "packages": ["packages/*"]
  },
  "scripts": {
    "generate:mesh:lock": "cd packages/graphql-mesh && npm i --package-lock-only --workspaces=false",
    "postinstall": "npm run postinstall -w graphql-mesh && patch-package",
    "prepare": "npm run pack -w spl-ts",
    "start": "npm start -w graphql-mesh",
    "test": "npm test -w spl-ts"
  },
  "devDependencies": {
    "patch-package": "^8.0.0"
  },
  "engines": {
    "node": "18"
  },
  "packageManager": "npm@9.5.1"
}
